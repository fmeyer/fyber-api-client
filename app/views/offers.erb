<div class="offers">
<h1>FyberAPI Offers
    <span>Display offers from FibersAPI</span>
</h1>

<% if @fyber_response.empty? %>
    <div class="no_offers">
        No offers
    </div>
<% else %>
    <% @fyber_response.offers.each do |offer| %>
        <div class="offer">
            <div class="title"><%= offer.title %></div>
            <div class="payout"><%= offer.payout %></div>
            <div class="thumbnail"><%= offer.thumbnail.lowres %></div>
        </div>
    <% end %>
<% end %>
</div>
