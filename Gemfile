ruby '2.1.3'
source 'https://rubygems.org'

# Sinatra driver
gem 'sinatra'
gem 'sinatra-contrib'

# Use Thin for our web server
gem 'thin'

gem 'activesupport', '~>4.1'

gem 'rake'
gem 'shotgun'
gem 'httparty'

group :development, :test do 
    gem 'pry'
    gem 'web-console'
    gem 'capybara'
    gem 'faker'
    gem 'vcr'

    gem 'rspec'
    gem 'rspec-rerun'
    gem 'rspec-legacy_formatters'

    gem 'simplecov', :require => false
end


